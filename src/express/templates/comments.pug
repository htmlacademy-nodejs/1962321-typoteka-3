extends snippets/layout.pug

block content
  main.main-page.main-page--padding
    section.main-page__publication.publication
      h1.publication__title Комментарии
      ul.publication__list
        each comment in comments
          li.publication__list-item
            .publication__header
              img.publication__list-image(src=`/img/${comment.avatar}`, width='20', height='20', alt='Аватар пользователя')
              b.publication__list-name= comment.name
              time.publication__item-time(datetime= comment.date)= comment.date
            a.publication__item-text(href=`/articles/${comment.articleId}`)= comment.text
            p.publication__text-strong= comment.articleTitle
            button.publication__button.button.button--close-item(type='button')
              span.visually-hidden Закрыть строку списка
